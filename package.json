{
    "name": "telegram-widget",
    "version": "1.0.0",
    "description": "A modern, transparent, and always-on-top Telegram Widget for macOS. Features a Control Center, Zoom, and Opacity sliders. For macOS development inquiries, contact vizayp@icloud.com",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "author": "Vijay Polamarasetti <vizayp@icloud.com>",
    "license": "MIT",
    "devDependencies": {
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.vijay.telegramwidget",
        "productName": "TelegramWidget",
        "mac": {
            "category": "public.app-category.social-networking",
            "target": [
                "dmg"
            ],
            "hardenedRuntime": true,
            "gatekeeperAssess": false
        },
        "directories": {
            "output": "dist"
        }
    }
}